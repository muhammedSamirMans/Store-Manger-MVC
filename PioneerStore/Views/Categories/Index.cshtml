@model IEnumerable<PioneerStore.Models.Category>

@{
    ViewBag.Title = "Categories";
}

<div class="card">
    <div class="card-header">
        <h2 style="text-align:center; color:indianred;font-weight:bolder;">Categories</h2>

        <a href="Categories/Create">
            <i class="fa fa-plus">Add New</i>
        </a>
    </div>
    <div class="card-body">
        <div class="table table-hover table-bordered table-responsive">
            <table class="table">
                <thead style="background-color: #dde4eb;">
                    <tr>
                        <td style=" border-color: rgb(40 167 69 / 25%);">
                            @Html.DisplayNameFor(model => model.Name)
                            </td>
                        <td style=" border-color: rgb(40 167 69 / 25%);">
                            @Html.DisplayNameFor(model => model.SillingPrice)
                            </td>
                        <td style=" border-color: rgb(40 167 69 / 25%);">
                            @Html.DisplayNameFor(model => model.PurechcastPrice)
                            </td>
                        <td style=" border-color: rgb(40 167 69 / 25%);">
                            @Html.DisplayNameFor(model => model.Code)
                            </td>
                        <td style=" border-color: rgb(40 167 69 / 25%);">
                            @Html.DisplayName("Main Unit")
                            </td>
                        <td style=" border-color: rgb(40 167 69 / 25%);">
                            @Html.DisplayName("Sub Unit")
                            </td>
                        <td style=" border-color: rgb(40 167 69 / 25%);">
                            @Html.DisplayName("Precent of AddedTax(%)")
                            </td>
                        <td style=" border-color: rgb(40 167 69 / 25%);">Actions</td>
                    </tr>
                </thead>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SillingPrice)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PurechcastPrice)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Code)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Unit.UnitName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Unit1.UnitName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AddedTax)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.ID })
                                <i class="fa fa-pencil-square-o"></i>
                            </td>
                        </tr>
                    }

            </table>
        </div>
     </div>
</div>