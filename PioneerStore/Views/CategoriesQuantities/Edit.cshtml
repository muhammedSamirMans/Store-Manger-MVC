@model PioneerStore.Models.CategoriesQuantity

@{
    ViewBag.Title = "Edit";
}
    <div>
        <i class="fa fa-arrow-circle-left"></i> @Html.ActionLink("Back to List", "Index")
    </div>
@Html.HiddenFor(model => model.ID)
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()



    <div class="card">
        <h4 style="color:brown; margin:20px 20px 20px 20px;" class="card-title">CategoriesQuantity</h4>
        <div class="card-body">
            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.LabelFor(model => model.Quantity, htmlAttributes: new { @class = "control-label col-md-2" })
